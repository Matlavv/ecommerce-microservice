// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart {
  id       Int       @id @default(autoincrement())
  userId   Int
  products Product[] @relation("CartProducts")
}

model Product {
    id    Int    @id @default(autoincrement())
    name  String // Ajoutez ce champ
    price Float
    carts Cart[] @relation("CartProducts")
}
